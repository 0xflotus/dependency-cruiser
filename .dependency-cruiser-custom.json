{
    "allowed": [{
            "from": "^(src|test)",
            "to": "^(src|node_modules)"
        },{
            "from": "^(src|test)",
            "to": "^(fs|path)$",
            "comment": "because these core modules make sense here"
        },{
            "from": "^bin",
            "to": "^src/index\\.js"
        },{
            "from": "^src/index\\.js",
            "to": "^package\\.json$"
        },{
            "from": "^node_modules",
            "to": ".+"
        },{
            "from": "^test",
            "to": "^test"
        }
    ],
    "forbidden": [{
		"name": "no-dep-on-test",
		"severity": "error",
        "from": "^src",
        "to": "^test"
    },{
		"name": "no-external-to-here",
		"severity": "info",
        "from": "node_modules",
        "to": "^(src|test|lib)",
        "comment": "you never know..."
    }]
}
